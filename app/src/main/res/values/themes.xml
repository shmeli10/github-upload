<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.QRReader" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/qrreader_blue_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/qrreader_blue_700</item>
        <item name="colorOnSurface">@color/qrreader_black</item>
        <item name="colorAccent">@color/qrreader_blue_700</item>
        <item name="colorSurface">@color/qrreader_gray_50</item>
        <item name="colorSecondary">@color/white</item>
        <item name="android:colorBackground">@color/qrreader_blue_500</item>
    </style>

    <style name="Theme.QRReader" parent="Base.Theme.QRReader"/>

    <style name="Theme.QRReader.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Sunflower.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="TextAppearance.Sunflower.Toolbar.Text" parent="TextAppearance.MaterialComponents.Headline5" >
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>

    <style name="Button.Allow" parent="ShapeAppearance.MaterialComponents">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/flashlight_bg</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

    <style name="FlashlightButton" parent="Theme.MaterialComponents.DayNight">
        <item name="android:buttonStyleToggle">@style/Widget.Button.Toggle</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
    </style>

</resources>